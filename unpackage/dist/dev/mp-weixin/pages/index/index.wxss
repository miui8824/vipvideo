.content {
  padding: 24rpx;
  box-sizing: border-box;
  font-size: 24rpx;
}
.videocard {
  border-radius: 8rpx;
  overflow: hidden;
}
.videocard .image_card {
  width: 180rpx;
  height: 250rpx;
  position: relative;
}
.videocard .update_timer {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  color: #fff;
  font-size: 24rpx;
}
.videocard image {
  width: 100%;
  height: 100%;
  display: block;
}

